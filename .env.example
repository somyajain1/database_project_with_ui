# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development  # Change to 'production' for production environment
SECRET_KEY=your-secret-key-here  # Change this to a secure random string

# Firebase Configuration
# Copy your Firebase service account key JSON and paste it as a single line
FIREBASE_CREDENTIALS={"type": "service_account", "project_id": "your-project-id", ...}

# Other Configuration
DEBUG=True  # Set to False in production 